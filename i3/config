bindsym $mod+Shift+r restart

# Set shut down, restart and locking features
set $mode_system "System (L)ock, (E)xit, (S)uspend, (R)eboot, (Q)uit/shutdown"
set $mode_system_suspend "Suspend: Y/N"
set $mode_system_logout "Logout: Y/N"
set $mode_system_reboot "Reboot: Y/N"
set $mode_system_shutdown "Shutdown: Y/N"
set $suspend_yes_action exec --no-startup-id lock && systemctl suspend, mode "default"
set $logout_yes_action exec --no-startup-id i3-msg exit, mode "default"
set $reboot_yes_action exec --no-startup-id systemctl reboot, mode "default"
set $shutdown_yes_action exec --no-startup-id systemctl poweroff, mode "default"
set $no_action mode "default"

mode $mode_system {
    bindsym l exec --no-startup-id ~/dotfiles/i3/scripts/lock, mode "default"
    bindsym s mode $mode_system_suspend
    bindsym e mode $mode_system_logout
    bindsym r mode $mode_system_reboot
    bindsym q mode $mode_system_shutdown

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+BackSpace mode $mode_system


mode $mode_system_suspend {
    bindsym Y $suspend_yes_action
    bindsym y $suspend_yes_action
    bindsym Return $suspend_yes_action

    bindsym N $no_action
    bindsym n $no_action
    bindsym Escape $no_action
}

mode $mode_system_logout {
    bindsym Y $logout_yes_action
    bindsym y $logout_yes_action
    bindsym Return $logout_yes_action

    bindsym N $no_action
    bindsym n $no_action
    bindsym Escape $no_action
}

mode $mode_system_reboot {
    bindsym Y $reboot_yes_action
    bindsym y $reboot_yes_action
    bindsym Return $reboot_yes_action

    bindsym N $no_action
    bindsym n $no_action
    bindsym Escape $no_action
}

mode $mode_system_shutdown {
    bindsym Y $shutdown_yes_action
    bindsym y $shutdown_yes_action
    bindsym Return $shutdown_yes_action

    bindsym N $no_action
    bindsym n $no_action
    bindsym Escape $no_action
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $kbd_querty  "setxkbmap -layout 'us' -variant 'alt-intl-unicode' -option 'caps:ctrl_modifier'; xcape -e 'Caps_Lock=Escape'"
set $kbd_colemak "setxkbmap -layout 'colemak_DvbgHm' -variant 'colemak' -option 'caps:ctrl_modifier'; xcape -e 'Caps_Lock=Escape'"

